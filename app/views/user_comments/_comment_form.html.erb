<%= form_for([@blog_post, @blog_post.user_comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter, "Name" %><br />
    <%= f.text_field :commenter, :maxlength => 15 %>
  </div>
  <div class="field">
    <%= f.label :body, "Comment" %><br />
    <%= f.text_area :body, :rows => 2 %>
  </div>
  <div class="actions">
    <%= f.submit "Add comment"%>
  </div>
  
<% end %>